{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express", "jest", "supertest", "cors", "jsonwebtoken", "pg", "bcrypt", "bcryptjs", "dotenv", "mocha"],
    
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "db/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
